func vec3_dot(a: Vec3, b: Vec3): float {
	return a.x*b.x + a.y*b.y + a.z*b.z;
}

typedef U8 = char;

func fib(n: int): int {
	if (n == 0) { return 0; }
	prev := 0;
	result := 1;
	for (i := 1; i < n; i++) {
		new := result + prev;
		prev = result;
		result = new;
	}
	return result;
}

